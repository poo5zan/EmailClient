@model EmailClient.Web.Models.AccountLoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>


@section scripts{
    
<script src="~/Scripts/app/Models/accountLoginModel.js"></script>
<script src="~/Scripts/app/Controllers/accountLoginController.js"></script>

    }

<div class="row" data-ng-controller="AccountLoginController" ng-init="returnUrl = '@Model.ReturnUrl'">
    <div class="col-md-8">
        <section id="loginForm">           
            @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml")
                <div class="form-group">
                    <span class="col-md-2 control-label">Login Email</span>                   
                    <div class="col-md-10">                        
                        <input type="text" class="form-control" ng-model="accountModel.LoginEmail" placeholder="login email" />
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-md-2 control-label">Password</span>                   
                    <div class="col-md-10">
                        <input type="password" class="form-control" ng-model="accountModel.Password" placeholder="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input type="checkbox" class="form-control" ng-model="accountModel.RememberMe" />
                            <span class="col-md-2 control-label">Remember Me</span>                   
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">                        
                        <button type="button" class="btn btn-info" ng-click="login()">Login</button>
                    </div>
                </div>
                
        </section>
    </div>
   
</div>
